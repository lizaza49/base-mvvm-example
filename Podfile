# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'BaseMVVMExample' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BaseMVVMExample
# Data storage
  pod 'RealmSwift'
  
  # Rx
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'

  # Networking
  pod 'Moya/RxSwift', '~> 12.0'
  
  # Fabric + Crashlytics
  pod 'Fabric', '= 1.7.12'
  pod 'Crashlytics', '= 3.10.8'

  # Logging with CocoaLumberjack
  pod 'CocoaLumberjack/Swift', '3.4.2'  

  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  
  # UI related
  pod 'IVCollectionKit'
  pod 'SnapKit', '~> 4.0.0'
  pod 'SDWebImage', '~> 4.0'
  pod 'InputMask', '= 4.0.0'
  
  # Security
  pod 'KeychainAccess', '= 3.1.1'
  
  # Utils
  pod 'SwiftGen', '= 5.3.0'
	
	#Yandex Map Kit
	pod 'YandexMapKit', '~> 3.3'
	pod 'ClusterKit', '= 0.4.0'
  target 'BaseMVVMExampleTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'BaseMVVMExampleUITests' do
    # Pods for testing
  end

end
